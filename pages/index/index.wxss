/**index.wxss**/

.container {
  height: 1500rpx;
}

/**display: flex;先将小程序设置为弹性布局，然后设置水平排列**/

.container .search {
  width: 745rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  display: flex;
  flex-direction: row;
  background: #2a8ce5;
}

.container .search-left {
  flex: 8;
  display: flex;
  flex-direction: row;
  background: #4ea3e7;
  text-align: left;
}

.container .search-left input {
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}

.search-placeholder {
  color: #8ccefd;
  line-height: 20rpx;
}

.container .search .search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.container .search .search-right {
  flex: 1;
}

.container .search .search-right image {
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container {
  padding: 0;
  font-size: 14rpx;
  background: #f0f4f3;
  color: #000;
}

.container .feed-item {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
}

.container .feed-item .feed-source {
  width: 690rpx;
  left: 0;
  height: 50rpx;
}
.container .feed-item .feed-source a {
  display: inline-block;
  height: 40rpx;
}

.container .feed-item .feed-source .avatar{
  position: relative;
  display: inline-block;
}

.container .feed-item .feed-source .avatar image {
  position: relative;
  display: inline-block;
  border-radius: 45rpx;
  vertical-align: middle;
  width: 45rpx;
  height: 45rpx;
}

.container .feed-item .feed-source text {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}

.container .feed-item .feed-source .item-more {
  display: flex;
  width: 40rpx;
  height: 45rpx;
  float: right
}

.container .feed-item .feed-content {
  padding: 10px 0 0 0;
}

.container .feed-item .feed-content .question text {
  font-size: 28rpx;
  font-weight: 600rpx;
  line-height: 40rpx;
}

.container .feed-item .feed-content .answer-body {
  padding: 10rpx 0 0 0;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
}

.container .feed-item .feed-content .answer-actions {
  width: 690rpx;
  padding: 10rpx 0 0;
  color: #a0acac;
}

.container .feed-item .feed-content .answer-actions view {
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}
