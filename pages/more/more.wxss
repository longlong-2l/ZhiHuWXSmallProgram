.user {
  width: 745rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  padding: 30rpx 25rpx 30rpx 30rpx;
  margin: 15rpx 0 0 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #dcdcdc;
  box-shadow: 0 2px 5px #eee;
}

.user .userinfo-avatar {
  flex: 1;
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 80rpx;
}

.user .user-info {
  flex: 5;
  text-align: left;
  display: flex;
  margin-left: 30rpx;
  flex-direction: column;
}

.user .user-info text {
  display: block;
}

.user .user-info .userinfo-nickname {
  padding: 8rpx 0 10rpx 0;
  font-size: 30rpx;
  font: "L.L";
  color: #818a8f;
}

.user .user-info .edit {
  font-size: 30rpx;
  color: #bababa;
  line-height: 34rpx;
}

.my {
  margin: 15rpx 0 0 0;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 2px #ebebeb;
  flex-direction: column;
}

.my .my-item {
  width: 745rpx;
  background: #fff;
  flex-direction: row;
  line-height: 50rpx;
  display: flex;
  padding: 0;
}

.my .my-item .myitem-icon {
  flex: 1;
}

.my .my-item .myitem-icon image {
  width: 45rpx;
  height: 45rpx;
  padding: 30rpx 0;
}

.my .my-item .myitem-name {
  flex: 5;
  text-align: left;
  font-size: 34rpx;.
  color: #6d6d6d;
  padding: 30rpx 0;
  line-height: 60rpx;
  border-bottom: solid 1px #ebebeb;
}

.my .my-item:last-child .myitem-name {
  border-bottom: none;
}
